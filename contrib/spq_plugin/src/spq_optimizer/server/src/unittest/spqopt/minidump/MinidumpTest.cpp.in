#include "spqos/base.h"
#include "spqos/memory/CAutoMemoryPool.h"
#include "spqos/task/CAutoTraceFlag.h"
#include "spqos/test/CUnittest.h"
#include "spqopt/exception.h"
#include "spqopt/minidump/CMinidumperUtils.h"
#include "unittest/spqopt/CTestUtils.h"
#include "unittest/spqopt/minidump/${test_name}.h"

using namespace spqopt;

ULONG ${test_name}::m_ulTestCounter = 0;  // start from first test

SPQOS_RESULT
${test_name}::EresUnittest()
{
	CUnittest rgut[] =
		{
		SPQOS_UNITTEST_FUNC(EresUnittest_RunTests),
		};

	SPQOS_RESULT eres = CUnittest::EresExecute(rgut, SPQOS_ARRAY_SIZE(rgut));

	// reset metadata cache
	CMDCache::Reset();

	return eres;
}

// Run all Minidump-based tests with plan matching
SPQOS_RESULT
${test_name}::EresUnittest_RunTests()
{
	const CHAR *rgszMdpFiles[] =
	{
${mdp_files}
	};

	return CTestUtils::EresUnittest_RunTests
						(
						rgszMdpFiles,
						&m_ulTestCounter,
						SPQOS_ARRAY_SIZE(rgszMdpFiles)
						);
}

